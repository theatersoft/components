@import base

color-background = color-black
border-radius = 0.6rem
button-offset = 4.8rem
color = color-white
horizontal-offset = 8 rem
vertical-offset = 4 rem

.snackbar
    position absolute
    bottom 0
    left horizontal-offset
    right horizontal-offset
    align-items center
    padding vertical-offset horizontal-offset
    background-color color-background
    border-radius border-radius
    color color
    display flex
    transition all animation-duration animation-curve-default animation-duration
    z-index-higher()

    &.normal .button
        color color-normal
    &.warning .button
        color color-warning
    &.error .button
        color color-error
    &:not(.active)
        transform translateY(100%)
    &.active
        transform translateY(0%)

.label
    flex-grow 1
