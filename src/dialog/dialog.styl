@import base
@import colors
@import theme

color-background = color-white
color-title = color-black
color-body = color-black
border-radius = 0.6rem
content-padding = 6rem
navigation-padding = 3rem
translate-y = 16rem

.wrapper
    position absolute
    top 0
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    z-index-higher()

.dialog
    min-height 60%
    max-height 80%
    width 80%
    background-color color-background
    border-radius border-radius
    shadow-zz-inverse()
    display flex
    flex-direction column
    opacity 0
    overflow hidden
    transform translateY(-1 * translate-y)
    transition opacity animation-duration animation-curve-default, transform animation-duration animation-curve-default
    transition-delay animation-delay
    
    &.active
        opacity 1
        transform translateY(0%)

.title
    color color-title
    flex-grow 0
    font-size 8rem
    line-height 1
    margin 0 0 1rem

.body
    color color-body
    flex-grow 2
    padding content-padding
    & p
        font-size 6rem
        margin 0

.navigation
    flex-grow 0
    padding navigation-padding
    text-align right

.button
    margin-left navigation-padding
    min-width 0
    padding-left navigation-padding
    padding-right navigation-padding
