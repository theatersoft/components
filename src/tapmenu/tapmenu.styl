@import base
@import colors
@import theme

.field
    width 100%
    height 100%
    position relative
    align-items center
    justify-content center


.group
    display grid
    grid-template-rows 1fr 1fr 1fr
    grid-template-columns 1fr 1fr 1fr
    width 30rem
    height 30rem
    opacity 0
    transition opacity animation-duration animation-curve-default
    &.active
        opacity 1

.button-0
    grid-row 1
    grid-column 2
.button-1
    grid-row 2
    grid-column 3
.button-2
    grid-row 3
    grid-column 2
.button-3
    grid-row 2
    grid-column 1
