@import base
@import colors
@import theme

html
    box-sizing border-box
    -webkit-tap-highlight-color transparent

*, *:before, *:after
    box-sizing inherit
    padding 0
    margin 0

@font-face
    font-family 'Alegreya Sans SC'
    font-style normal
    font-weight 400
    src url(/res/alegreyasanssc.ttf)

