@import base

total-height = 7.2rem
track-length = 10.8rem
track-height = 4.2rem
thumb-size = 6rem
thumb-on-color = color-accent
thumb-off-color = palette-grey-50
track-on-color = rgba(color-accent, 0.5)
track-off-color = darken(theme-text, 0.5)
off-ripple-color = rgba(color-black, 0.4)
on-focus-color = rgba(color-primary, 0.26)
off-focus-color = rgba(color-black, 0.1)
focus-init-size = 2.4rem
ripple-duration = 550ms
field-margin-bottom = 4.5rem

.switch
    position relative
    display block
    white-space nowrap
    vertical-align middle

.input
    height 0
    opacity 0
    overflow hidden
    width 0

track()
    position relative
    display inline-block
    width track-length
    height track-height
    cursor pointer
    border-radius 4rem

thumb-focus()
    position absolute
    top 50%
    left 50%
    box-sizing border-box
    display inline-block
    width 8rem
    height 8rem
    content ""
    background-color transparent
    border-radius 50%
    transform translate((- focus-init-size / 2), (- focus-init-size / 2))

.thumb
    material-animation-default(0.2 s)
    position absolute
    top ((track-height - thumb-size) / 2)
    width thumb-size
    height thumb-size
    cursor pointer
    border-radius 50%
    transition-property left
    .ripple
        transition-duration ripple-duration
    & :global .rippleWrapper
        overflow visible
.on
    track()
    background track-on-color
    .thumb
        left track-length - thumb-size
        background thumb-on-color

.off
    track()
    background track-off-color
    .thumb
        left 0
        background thumb-off-color
        shadow-z()
