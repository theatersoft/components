@import base

height = h(86)
width = w(80)

.wrapper
    position absolute
    top 0
    width 100%
    height 100%

.overlay
    position absolute
    width 100%
    height 100%

.sheet
    position absolute
    background-color theme-background-transparent
    overflow hidden
    transition transform animation-duration animation-curve-default
    &.top, &.bottom
        height height
        width 100%
    &.top
        transform translateY(0 - height)
        top 0
    &.bottom
        transform translateY(height)
        top (100 - height)
    &.active.top, &.active.bottom
        transform translateY(0)
    &.left, &.right
        height 100%
        overflow-x hidden
        overflow-y auto
        width width
    &.left
        transform translateX(0 - width)
        top 0
    &.right
        transform translateX(width)
        left (w(100) - width)
    &.active.left, &.active.right
        transform translateX(0)